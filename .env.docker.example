# EFYS Docker Environment Variables
# KopyalayÄ±n: cp .env.docker.example .env

# Flask Settings
FLASK_APP=app.py
FLASK_ENV=production
SECRET_KEY=your-super-secret-key-change-this-32-chars-minimum

# Database Configuration (PostgreSQL Container)
DB_NAME=efys_production
DB_USER=efys_user
DB_PASSWORD=efys_secure_password_2026_change_this

# Redis Configuration (Session Store)
REDIS_PASSWORD=redis_secure_password_change_this

# Gunicorn Settings
WORKERS=4
WORKER_CLASS=sync
TIMEOUT=120

# Application Settings
APP_NAME=EFYS
DEBUG=False

# Demo Data (Set to 'true' for first run only)
GENERATE_DEMO_DATA=false

# Timezone
TZ=Europe/Istanbul

# Optional: Email settings for notifications
# MAIL_SERVER=smtp.gmail.com
# MAIL_PORT=587
# MAIL_USE_TLS=true
# MAIL_USERNAME=your-email@gmail.com
# MAIL_PASSWORD=your-app-password
