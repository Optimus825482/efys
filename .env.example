# EFYS Production Environment Variables
# Kopyalayın: cp .env.example .env
# Güvenlik: .env dosyası git'e eklenmemelidir!

# Flask Settings
FLASK_APP=app.py
FLASK_ENV=production
SECRET_KEY=your-super-secret-key-change-this-in-production

# Database Configuration
DATABASE_URL=postgresql://efys_user:secure_password@localhost:5432/efys_production
DB_HOST=localhost
DB_PORT=5432
DB_NAME=efys_production
DB_USER=efys_user
DB_PASSWORD=secure_password

# Application Settings
APP_NAME=EFYS
APP_HOST=0.0.0.0
APP_PORT=5000
DEBUG=False

# Gunicorn Settings
WORKERS=4
WORKER_CLASS=sync
TIMEOUT=120
BIND=127.0.0.1:8000

# Logging
LOG_LEVEL=INFO
LOG_FILE=/var/log/efys/app.log

# Security
ALLOWED_HOSTS=yourdomain.com,www.yourdomain.com
CSRF_ENABLED=True

# Session
SESSION_COOKIE_SECURE=True
SESSION_COOKIE_HTTPONLY=True
SESSION_COOKIE_SAMESITE=Lax
PERMANENT_SESSION_LIFETIME=86400

# File Uploads
MAX_CONTENT_LENGTH=16777216
UPLOAD_FOLDER=/var/www/efys/uploads

# Timezone
TZ=Europe/Istanbul
